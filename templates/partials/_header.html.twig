<nav class="navbar">
  <div class="logo">
    <a href="{{ path('default_home') }}">EventFlow</a>
  </div>

  <button class="navbar-toggle"
          aria-controls="primary-nav"
          aria-expanded="false"
          aria-label="Ouvrir le menu">
    <span></span><span></span><span></span>
  </button>

  <ul class="nav-links" id="primary-nav">
    <li><a href="{{ path('default_home') }}">Accueil</a></li>
    {% if app.user %}
      <li><a href="{{ path('user_profil') }}">Mon Profil</a></li>
      <li><a href="{{ path('app_logout') }}">DÃ©connexion</a></li>
      <li>
        <span class="nav-user">
          {{ app.user.prenom ?: app.user.nom ?: app.user.email }}
        </span>
      </li>
    {% else %}
      <li><a href="{{ path('app_login') }}">Connexion</a></li>
      <li><a href="{{ path('app_register') }}">Inscription</a></li>
    {% endif %}
  </ul>
</nav>

<style>
.navbar {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between; 
  background: #0b0b0b;
  color: #fff;
  padding: 10px 20px;
  border-bottom: 1px solid rgba(255,255,255,0.08);
}
.logo a {
  color: #fff;
  font-weight: 700;
  font-size: 1.2rem;
  text-decoration: none;
}
.nav-links {
  list-style: none;
  display: flex;
  align-items: center;
  gap: 20px;
  margin: 0;
  padding: 0;
}
.nav-links a {
  color: #fff;
  text-decoration: none;
  padding: 8px 12px;
  border-radius: 6px;
  transition: background .3s;
}
.nav-links a:hover {
  background: rgba(255,255,255,0.1);
}
.nav-user {
  background: #0ea5e9;
  color: #fff;
  padding: 4px 10px;
  border-radius: 6px;
  font-size: .9rem;
}

.navbar-toggle {
  background: transparent;
  border: none;
  cursor: pointer;
  padding: 8px;
  display: none; 
}
.navbar-toggle span {
  display: block;
  width: 24px;
  height: 2px;
  background: #fff;
  margin: 5px 0;
  transition: transform .25s, opacity .25s;
}
.navbar-toggle[aria-expanded="true"] span:nth-child(1){transform:translateY(7px) rotate(45deg)}
.navbar-toggle[aria-expanded="true"] span:nth-child(2){opacity:0}
.navbar-toggle[aria-expanded="true"] span:nth-child(3){transform:translateY(-7px) rotate(-45deg)}

.nav-overlay{
  position:fixed;inset:0;background:rgba(0,0,0,.4);
  opacity:0;pointer-events:none;transition:opacity .25s ease;z-index:40
}
.nav-overlay.open{opacity:1;pointer-events:auto}

@media (max-width:768px){
  .navbar-toggle{display:inline-block}
  .nav-links{
    position:absolute;
    top:100%;
    right:0;
    background:#111;
    list-style:none;
    display:grid;
    gap:4px;
    margin:0;
    padding:10px 12px;
    width:70%;
    max-width:300px;
    border-left:1px solid rgba(255,255,255,.08);
    border-bottom:1px solid rgba(255,255,255,.08);
    border-radius:0 0 0 10px;
    box-shadow:0 4px 20px rgba(0,0,0,.4);
    max-height:0;overflow:hidden;opacity:0;transform:translateY(-4px);
    transition:max-height .25s ease,opacity .25s ease,transform .25s ease;
    z-index:50;
  }
  .nav-links.open{
    max-height:420px;opacity:1;transform:translateY(0);
  }
  .nav-links li a,
  .nav-links li span{
    display:block;width:100%;padding:10px 12px;color:#fff;text-decoration:none
  }
  .nav-links li a:hover{background:rgba(255,255,255,.1)}
  .nav-links li+li{border-top:1px solid rgba(255,255,255,.06)}
}
</style>

<script>
(function(){
  if(document.readyState==='loading'){
    document.addEventListener('DOMContentLoaded',init);
  }else{init();}
  function init(){
    const btn=document.querySelector('.navbar-toggle');
    const list=document.getElementById('primary-nav');
    if(!btn||!list)return;
    const overlay=document.createElement('div');
    overlay.className='nav-overlay';
    document.body.appendChild(overlay);

    function openMenu(){
      btn.setAttribute('aria-expanded','true');
      list.classList.add('open');
      overlay.classList.add('open');
      document.body.style.overflow='hidden';
    }
    function closeMenu(){
      btn.setAttribute('aria-expanded','false');
      list.classList.remove('open');
      overlay.classList.remove('open');
      document.body.style.overflow='';
    }
    btn.addEventListener('click',e=>{
      e.stopPropagation();
      const expanded=btn.getAttribute('aria-expanded')==='true';
      expanded?closeMenu():openMenu();
    });
    overlay.addEventListener('click',closeMenu);
    list.addEventListener('click',e=>{
      if(e.target.closest('a'))closeMenu();
    });
    document.addEventListener('keydown',e=>{
      if(e.key==='Escape')closeMenu();
    });
  }
})();
</script>
