{% extends 'base.html.twig' %}
{% block title %}Gestion des événements{% endblock %}

{% block stylesheets %}
<style>
  :root{--bg:#f6f8fb;--card:#fff;--text:#111827;--muted:#6b7280;--primary:#0ea5e9;--success:#16a34a;--danger:#dc2626;--border:#e5e7eb}
  *{box-sizing:border-box} body{margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,"Helvetica Neue",Arial,"Noto Sans",sans-serif;background:var(--bg);color:var(--text)}
  .wrap{max-width:1100px;margin:24px auto;padding:0 16px}
  h1{margin:0 0 16px}
  .btn{display:inline-block;padding:10px 16px;border-radius:10px;border:1px solid var(--success);background:var(--success);color:#fff;text-decoration:none;font-weight:600}
  .btn:hover{background:#15803d}
  .table{margin-top:16px;background:var(--card);border:1px solid var(--border);border-radius:12px;overflow:hidden}
  table{width:100%;border-collapse:collapse}
  thead{background:#e0f2fe;color:#0369a1}
  th,td{padding:10px 12px;border-bottom:1px solid var(--border);text-align:left}
  .action{padding:6px 10px;border-radius:6px;border:1px solid;cursor:pointer;text-decoration:none;font-size:.9rem}
  .edit{border-color:var(--primary);color:#075985}
  .delete{background:var(--danger);border-color:var(--danger);color:#fff}
  .delete:hover{background:#b91c1c}

  @media (max-width: 640px) {
  .wrap { padding: 0 10px; }

  .table { border-radius: 0; border-left: 0; border-right: 0; overflow-x: auto; }
  .table::-webkit-scrollbar { height: 6px; }

  table { table-layout: fixed; min-width: 520px; }
  th, td { padding: 8px; }

  th:nth-child(1),
  td:nth-child(1) { display: none; }

  td:last-child {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  td:last-child .action {
    flex: 1 1 120px;
    text-align: center;
  }

  .btn { width: 100%; text-align: center; }
}

</style>
{% endblock %}

{% block body %}
<div class="wrap">
  <h1>Gestion des événements</h1>

  <a href="{{ path('admin_evenement_new') }}" class="btn">+ Ajouter un événement</a>

  <div class="table">
    <table>
      <thead>
        <tr><th>ID</th><th>Titre</th><th>Date début</th><th>Capacité</th><th>Actions</th></tr>
      </thead>
      <tbody>
        {% for e in evenements %}
          <tr>
            <td>{{ e.id }}</td>
            <td>{{ e.titre }}</td>
            <td>{{ e.dateDebut ? e.dateDebut|date('d/m/Y H:i') : '' }}</td>
            <td>{{ e.capaciteMax ?? '-' }}</td>
            <td>
              <a href="{{ path('admin_evenement_edit', {id: e.id}) }}" class="action edit">Modifier</a>
              <form method="post" action="{{ path('admin_evenement_delete', {id: e.id}) }}" style="display:inline" onsubmit="return confirm('Supprimer cet événement ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ e.id) }}">
                <button type="submit" class="action delete">Supprimer</button>
              </form>
            </td>
          </tr>
        {% else %}
          <tr><td colspan="5">Aucun événement.</td></tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
