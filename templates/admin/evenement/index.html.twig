{% extends 'base.html.twig' %}
{% block title %}Gestion des événements{% endblock %}
{% block body %}
    <div class="page-container">
        <div class="card profile-section">
            <div class="card-header">
                <h1 class="card-title">Gestion des événements</h1>
                <a class="btn btn-success" href="{{ path('admin_evenement_new') }}">+ Ajouter un événement</a>
            </div>

            {% if evenements is empty %}
                <div class="empty-state">
                    Aucun événement n'est enregistré.
                </div>
            {% else %}
                <div class="table-wrapper">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Titre</th>
                                <th>Date début</th>
                                <th>Capacité</th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for e in evenements %}
                                <tr>
                                    <td>{{ e.id }}</td>
                                    <td>{{ e.titre }}</td>
                                    <td>{{ e.dateDebut ? e.dateDebut|date('d/m/Y H:i') : '' }}</td>
                                    <td>{{ e.capaciteMax ?? '—' }}</td>
                                    <td class="text-right">
                                        <div class="table-actions">
                                            <a class="btn btn-outline" href="{{ path('admin_evenement_edit', {id: e.id}) }}">Modifier</a>
                                            <form method="post" action="{{ path('admin_evenement_delete', {id: e.id}) }}" onsubmit="return confirm('Supprimer cet événement ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ e.id) }}">
                                                <button class="btn btn-danger" type="submit">Supprimer</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
