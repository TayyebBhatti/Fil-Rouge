{% extends 'base.html.twig' %}
{% block title %}Gestion des utilisateurs{% endblock %}

{% block stylesheets %}
<style>
  :root{--bg:#f6f8fb;--card:#fff;--text:#111827;--muted:#6b7280;--primary:#0ea5e9;--success:#16a34a;--danger:#dc2626;--amber:#f59e0b;--border:#e5e7eb}
  *{box-sizing:border-box} body{margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,"Helvetica Neue",Arial,"Noto Sans",sans-serif;background:var(--bg);color:var(--text)}
  .wrap{max-width:1200px;margin:24px auto;padding:0 16px}
  h1{margin:0 0 8px} p.muted{color:var(--muted);margin:0 0 18px}
  .table{overflow-x:auto;background:var(--card);border:1px solid var(--border);border-radius:12px}
  table{width:100%;border-collapse:collapse}
  thead{background:var(--primary);color:#fff;text-align:left}
  th,td{padding:12px 16px;border-bottom:1px solid var(--border);vertical-align:top}
  tr.banned{background:#fef2f2}
  .chip{display:inline-block;padding:4px 10px;border-radius:999px;font-size:.8rem;font-weight:600}
  .chip-ok{background:#dcfce7;color:#166534} .chip-ban{background:#fee2e2;color:#b91c1c} .chip-role{background:#e0f2fe;color:#0369a1}
  .actions{display:flex;flex-wrap:wrap;gap:8px;justify-content:flex-end}
  .btn{padding:6px 12px;border-radius:6px;border:1px solid transparent;font-size:.9rem;cursor:pointer}
  .btn-admin{background:var(--primary);border-color:var(--primary);color:#fff}
  .btn-demote{background:#fef3c7;border-color:var(--amber);color:#b45309}
  .btn-ban{background:var(--danger);border-color:var(--danger);color:#fff}
  .btn-unban{background:#dcfce7;border-color:#16a34a;color:#166534}
  .note{margin-top:6px;font-size:.75rem;color:var(--muted)}
  .empty{padding:24px;border:1px dashed #d1d5db;border-radius:12px;text-align:center;color:#6b7280;background:#f9fafb}
</style>
{% endblock %}

{% block body %}
<div class="wrap">
  <h1>ðŸ”§ Gestion des utilisateurs</h1>
  <p class="muted">Liste, rÃ´les et bannissements.</p>

  {% if utilisateurs is empty %}
    <div class="empty">Aucun utilisateur n'est enregistrÃ© pour le moment.</div>
  {% else %}
    <div class="table">
      <table>
        <thead>
          <tr>
            <th>Utilisateur</th><th>Email</th><th>Statut</th><th>RÃ´les</th><th style="text-align:right">Actions</th>
          </tr>
        </thead>
        <tbody>
        {% for u in utilisateurs %}
          {% set isAdmin = 'ROLE_ADMIN' in u.roles %}
          {% set isBanned = 'ROLE_BANNED' in u.roles %}
          {% set isSelf = app.user and app.user.id == u.id %}
          <tr class="{{ isBanned ? 'banned' }}">
            <td>
              <div style="font-weight:600">{{ u.prenom ?: '' }} {{ u.nom ?: '' }}</div>
              <div class="muted" style="font-size:.85rem">ID #{{ u.id }}</div>
            </td>
            <td>{{ u.email ?: 'â€”' }}</td>
            <td>
              {% if isBanned %}
                <span class="chip chip-ban">Banni</span>
              {% else %}
                <span class="chip chip-ok">Actif</span>
              {% endif %}
            </td>
            <td>
              {% set displayedRoles = [] %}
              {% for role in u.roles %}{% if role != 'ROLE_USER' %}{% set displayedRoles = displayedRoles|merge([role]) %}{% endif %}{% endfor %}
              {% if displayedRoles is not empty %}
                {% for role in displayedRoles %}<span class="chip chip-role">{{ role }}</span>{% endfor %}
              {% else %}
                <span class="muted">ROLE_USER</span>
              {% endif %}
            </td>
            <td>
              <div class="actions">
                <form method="post" action="{{ path(isAdmin ? 'admin_utilisateur_demote' : 'admin_utilisateur_promote', {id: u.id}) }}">
                  <input type="hidden" name="_token" value="{{ csrf_token((isAdmin ? 'demote_user_' : 'promote_user_') ~ u.id) }}">
                  <button type="submit" class="btn {{ isAdmin ? 'btn-demote' : 'btn-admin' }}" {% if isSelf %}disabled style="opacity:.6;cursor:not-allowed"{% endif %}>
                    {{ isAdmin ? 'Retirer le rÃ´le admin' : 'Nommer admin' }}
                  </button>
                </form>
                <form method="post" action="{{ path(isBanned ? 'admin_utilisateur_unban' : 'admin_utilisateur_ban', {id: u.id}) }}">
                  <input type="hidden" name="_token" value="{{ csrf_token((isBanned ? 'unban_user_' : 'ban_user_') ~ u.id) }}">
                  <button type="submit" class="btn {{ isBanned ? 'btn-unban' : 'btn-ban' }}" {% if isSelf %}disabled style="opacity:.6;cursor:not-allowed"{% endif %}>
                    {{ isBanned ? 'RÃ©activer' : 'Bannir' }}
                  </button>
                </form>
              </div>
              {% if isSelf %}<div class="note">Action impossible sur votre propre compte.</div>{% endif %}
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  {% endif %}
</div>
{% endblock %}
