    <div style="display:grid;grid-template-columns:repeat(auto-fit, minmax(250px, 1fr));gap:20px;">
      <div>
        <p style="margin:0;color:#6b7280;font-size:0.9rem;">Nom</p>
        <p style="margin:5px 0 0 0;font-size:1.1rem;font-weight:500;">{{ user.nom ?: '‚Äî' }}</p>
      </div>
      
      <div>
        <p style="margin:0;color:#6b7280;font-size:0.9rem;">Pr√©nom</p>
        <p style="margin:5px 0 0 0;font-size:1.1rem;font-weight:500;">{{ user.prenom ?: '‚Äî' }}</p>
      </div>
      
      <div>
        <p style="margin:0;color:#6b7280;font-size:0.9rem;">Email</p>
        <p style="margin:5px 0 0 0;font-size:1.1rem;font-weight:500;">{{ user.email }}</p>
      </div>
      
      <div>
        <p style="margin:0;color:#6b7280;font-size:0.9rem;">R√¥le</p>
        <p style="margin:5px 0 0 0;font-size:1.1rem;font-weight:500;">
          {% if 'ROLE_ADMIN' in user.roles %}
            <span style="padding:4px 10px;background:#16a34a;color:white;border-radius:6px;font-size:0.9rem;">Administrateur</span>
          {% else %}
            <span style="padding:4px 10px;background:#0ea5e9;color:white;border-radius:6px;font-size:0.9rem;">Utilisateur</span>
          {% endif %}
        </p>
      </div>
    </div>
  </div>

  <div style="background:white;border:1px solid #e5e7eb;border-radius:12px;padding:24px;margin-bottom:30px;box-shadow:0 2px 6px rgba(0,0,0,0.1);">
    <h2 style="margin-top:0;margin-bottom:20px;color:#111827;border-bottom:2px solid #0ea5e9;padding-bottom:10px;">
      üéüÔ∏è Mes inscriptions ({{ mesInscriptions|length }})
