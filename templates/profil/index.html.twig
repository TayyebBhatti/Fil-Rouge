{% extends 'base.html.twig' %}
{% block title %}Mon Profil{% endblock %}

{% block stylesheets %}
<style>
  :root{--bg:#f6f8fb;--card:#fff;--text:#111827;--muted:#6b7280;--primary:#0ea5e9;--success:#16a34a;--danger:#dc2626;--border:#e5e7eb;--shadow:0 8px 24px rgba(0,0,0,.08)}
  *{box-sizing:border-box} body{margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,"Helvetica Neue",Arial,"Noto Sans",sans-serif;background:var(--bg);color:var(--text)}
  .wrap{max-width:1100px;margin:24px auto;padding:0 16px}
  .alert{padding:10px 12px;border:1px solid;border-radius:10px;margin-bottom:10px;font-size:14px}
  .alert-success{border-color:var(--success);background:#ecfdf5;color:#14532d}
  .alert-error{border-color:var(--danger);background:#fef2f2;color:#7f1d1d}
  h1{margin:0 0 20px}
  .right{display:flex;justify-content:flex-end;margin-bottom:16px}
  .btn{display:inline-flex;align-items:center;gap:8px;padding:10px 16px;border-radius:10px;border:1px solid transparent;font-weight:600;text-decoration:none;cursor:pointer}
  .btn-info{background:var(--primary);border-color:var(--primary);color:#fff}
  .btn-info:hover{background:#0369a1}
  .card{background:var(--card);border:1px solid var(--border);border-radius:14px;padding:20px;margin-bottom:20px;box-shadow:var(--shadow)}
  .section-title{margin:0 0 14px;color:#111827;border-bottom:2px solid var(--primary);padding-bottom:8px}
  .grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:18px}
  .avatar{width:120px;height:120px;border-radius:999px;overflow:hidden;border:3px solid var(--primary);background:#e5e7eb;display:flex;align-items:center;justify-content:center}
  .cards{display:grid;grid-template-columns:repeat(auto-fill,minmax(280px,1fr));gap:16px}
  .mini{border:1px solid var(--border);border-radius:10px;overflow:hidden;background:#f9fafb}
  .mini img{width:100%;height:140px;object-fit:cover}
  .mini .body{padding:12px}
  .badge{padding:4px 10px;border-radius:6px;font-size:.9rem;color:#fff}
  .bg-user{background:var(--primary)} .bg-admin{background:var(--success)}
  .actions{display:flex;gap:8px}
  .btn-ghost{background:#fff;border:1px solid var(--border);color:#0b1220}
  .btn-ghost:hover{border-color:#cbd5e1}
  .btn-danger{background:var(--danger);border-color:var(--danger);color:#fff}
  .btn-danger:hover{background:#b91c1c}
</style>
{% endblock %}

{% block body %}
<div class="wrap">
  {% for msg in app.flashes('success') %}<div class="alert alert-success">{{ msg }}</div>{% endfor %}
  {% for msg in app.flashes('error') %}<div class="alert alert-error">{{ msg }}</div>{% endfor %}

  <h1>üë§ Mon Profil</h1>

  {% if 'ROLE_ADMIN' in user.roles %}
    <div class="right">
      <a href="{{ path('admin_utilisateur_index') }}" class="btn btn-info">üõ†Ô∏è G√©rer les utilisateurs</a>
    </div>
  {% endif %}

  <section class="card">
    <h2 class="section-title">üìã Informations personnelles</h2>

    {% set hasAbsoluteImage = user.image and (user.image starts with 'http://' or user.image starts with 'https://') %}
    {% set profileImage = hasAbsoluteImage ? user.image : (user.image ? asset(user.image) : asset('img/default-avatar.svg')) %}

    <div style="display:flex;flex-wrap:wrap;gap:24px;align-items:center;margin-bottom:18px">
      <div class="avatar"><img src="{{ profileImage }}" alt="Photo de profil" style="width:100%;height:100%;object-fit:cover"></div>
      <div style="flex:1;min-width:220px">
        <p class="muted" style="margin:0">Adresse email</p>
        <p style="margin:6px 0 0;font-weight:500">{{ user.email }}</p>
      </div>
    </div>

    <div class="grid">
      <div><p class="muted" style="margin:0">Nom</p><p style="margin:6px 0 0;font-weight:500">{{ user.nom ?: '‚Äî' }}</p></div>
      <div><p class="muted" style="margin:0">Pr√©nom</p><p style="margin:6px 0 0;font-weight:500">{{ user.prenom ?: '‚Äî' }}</p></div>
      <div>
        <p class="muted" style="margin:0">R√¥le</p>
        <p style="margin:6px 0 0">
          {% if 'ROLE_ADMIN' in user.roles %}
            <span class="badge bg-admin">Administrateur</span>
          {% else %}
            <span class="badge bg-user">Utilisateur</span>
          {% endif %}
        </p>
      </div>
    </div>
  </section>

  <section class="card">
    <h2 class="section-title">üéüÔ∏è Mes inscriptions ({{ mesInscriptions|length }})</h2>

    {% if mesInscriptions is empty %}
      <p class="muted" style="text-align:center;padding:16px">Vous n'√™tes inscrit √† aucun √©v√©nement.</p>
      <div style="text-align:center"><a href="{{ path('default_home') }}" class="btn btn-ghost">D√©couvrir les √©v√©nements</a></div>
    {% else %}
      <div class="cards">
        {% for inscription in mesInscriptions %}
          {% set e = inscription.evenement %}
          <article class="mini">
            {% if e.image %}<img src="{{ asset(e.image) }}" alt="Image de {{ e.titre }}">{% else %}<img src="{{ asset('img/default.jpg') }}" alt="Image par d√©faut">{% endif %}
            <div class="body">
              <h3 style="margin:0 0 8px;font-size:1rem">{{ e.titre }}</h3>
              <p class="muted" style="margin:0 0 6px">üìÖ {{ e.dateDebut ? e.dateDebut|date('d/m/Y H:i') : 'Date √† venir' }}</p>
              {% if e.lieu %}<p class="muted" style="margin:0 0 6px">üìç {{ e.lieu.ville ?: '' }}{% if e.lieu.pays %}, {{ e.lieu.pays }}{% endif %}</p>{% endif %}
              <p class="muted" style="margin:0 0 10px">Inscrit le {{ inscription.dateInscription ? inscription.dateInscription|date('d/m/Y') : '‚Äî' }}</p>
              <div class="actions">
                <a href="{{ path('evenement_show', {id: e.id}) }}" class="btn btn-ghost" style="flex:1;text-align:center">Voir d√©tails</a>
                <form method="post" action="{{ path('evenement_unregister', {id: e.id}) }}" style="flex:1">
                  <input type="hidden" name="_token" value="{{ csrf_token('desinscrire_' ~ e.id) }}">
                  <button type="submit" class="btn btn-danger" style="width:100%">Se d√©sinscrire</button>
                </form>
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
    {% endif %}
  </section>

  {% if mesEvenementsCrees is not empty %}
    <section class="card">
      <h2 class="section-title" style="border-color:var(--success)">‚ú® √âv√©nements que j'ai cr√©√©s ({{ mesEvenementsCrees|length }})</h2>
      <div class="cards">
        {% for e in mesEvenementsCrees %}
          <article class="mini">
            {% if e.image %}<img src="{{ asset(e.image) }}" alt="Image de {{ e.titre }}">{% else %}<img src="{{ asset('img/default.jpg') }}" alt="Image par d√©faut">{% endif %}
            <div class="body">
              <h3 style="margin:0 0 8px;font-size:1rem">{{ e.titre }}</h3>
              <p class="muted" style="margin:0 0 6px">üìÖ {{ e.dateDebut ? e.dateDebut|date('d/m/Y H:i') : 'Date √† venir' }}</p>
              <p class="muted" style="margin:0 0 10px">üë• {{ e.inscriptions|length }} inscrit(s){% if e.capaciteMax %} / {{ e.capaciteMax }}{% endif %}</p>
              <div class="actions">
                <a href="{{ path('evenement_show', {id: e.id}) }}" class="btn btn-ghost" style="flex:1;text-align:center">Voir d√©tails</a>
                {% if 'ROLE_ADMIN' in user.roles %}
                  <a href="{{ path('admin_evenement_edit', {id: e.id}) }}" class="btn btn-info" style="flex:1;text-align:center">Modifier</a>
                {% endif %}
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
    </section>
  {% endif %}

  <div style="margin-top:16px"><a href="{{ path('default_home') }}" class="btn btn-ghost">‚Üê Retour √† l'accueil</a></div>
</div>
{% endblock %}
